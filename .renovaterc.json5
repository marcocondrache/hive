{
    $schema: "https://docs.renovatebot.com/renovate-schema.json",
    extends: [
        "config:recommended",
        "docker:enableMajor",
        "helpers:pinGitHubActionDigests",
        "github>marcocondrach/hive//.renovate/autoMerge.json5",
        "github>marcocondrach/hive//.renovate/customManagers.json5",
        "github>marcocondrach/hive//.renovate/grafanaDashboards.json5",
        "github>marcocondrach/hive//.renovate/groups.json5",
        "github>marcocondrach/hive//.renovate/labels.json5",
        "github>marcocondrach/hive//.renovate/semanticCommits.json5",
        ":automergeBranch",
        ":disableRateLimiting",
        ":dependencyDashboard",
        ":semanticCommits",
        ":timezone(America/New_York)",
    ],
    dependencyDashboardTitle: "Renovate Dashboard ðŸ¤–",
    suppressNotifications: [
        "prEditedNotification",
        "prIgnoreNotification",
    ],
    ignorePaths: [
        "**/*.sops.*",
        "**/resources/**",
    ],
    flux: {
        fileMatch: [
            "(^|/)kubernetes/.+\\.ya?ml$"
        ]
    },
    "helm-values": {
        fileMatch: [
            "(^|/)kubernetes/.+\\.ya?ml$"
        ]
    },
    kubernetes: {
        fileMatch: [
            "(^|/)kubernetes/.+\\.ya?ml$"
        ]
    },
}